{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}